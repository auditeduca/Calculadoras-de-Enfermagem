  "calculators": [
    {
      "id": "insulina",
      "name": "Cálculo de Insulina",
      "description": "Ferramenta técnica para aspiração segura de insulina com protocolos integrados.",
      "category": "Medicação",
      "icon": "fa-syringe",
      "unit": "mL",
      "formula": {
        "calculation": "V = (Dose Prescrita × Volume Seringa) ÷ Concentração Frasco",
        "explanation": "Volume a aspirar em mL = (Dose em UI × Volume da seringa em mL) ÷ Concentração do frasco em UI/mL"
      },
      "fields": {
        "Parâmetros do Paciente": [
          {
            "id": "patient_name",
            "name": "Nome do Paciente",
            "type": "text",
            "placeholder": "Nome completo",
            "required": false,
            "tooltip": "Identificação do paciente para registro"
          },
          {
            "id": "patient_dob",
            "name": "Data de Nascimento",
            "type": "text",
            "placeholder": "DD/MM/AAAA",
            "required": false,
            "tooltip": "Para cálculo de idade e validação"
          }
        ],
        "Parâmetros do Cálculo": [
          {
            "id": "dose_prescrita",
            "name": "Dose Prescrita",
            "type": "number",
            "placeholder": "Ex: 20",
            "required": true,
            "tooltip": "Dose em Unidades Internacionais (UI) prescrita pelo médico",
            "unit": "UI",
            "min": 0,
            "step": 0.5
          },
          {
            "id": "concentracao_frasco",
            "name": "Concentração do Frasco",
            "type": "number",
            "placeholder": "Ex: 100",
            "required": true,
            "tooltip": "Concentração padrão: 100 UI/mL. Verificar rótulo.",
            "unit": "UI/mL",
            "min": 0
          },
          {
            "id": "volume_seringa",
            "name": "Volume da Seringa",
            "type": "number",
            "placeholder": "Ex: 1",
            "required": true,
            "tooltip": "Volume total da seringa disponível",
            "unit": "mL",
            "min": 0,
            "step": 0.5
          }
        ]
      },
      "instructions": [
        "Identifique corretamente o paciente",
        "Confirme a dose prescrita com a prescrição médica",
        "Verifique a concentração do frasco de insulina (geralmente 100 UI/mL)",
        "Selecione seringa apropriada (insulina 1mL ou 0,5mL)",
        "Realize dupla checagem com outro profissional",
        "Aspire o volume calculado com precisão"
      ],
      "warnings": [
        "Insulina é medicamento de alta vigilância",
        "Doses acima de 100 UI requerem atenção especial",
        "Nunca usar seringa padrão para insulina",
        "Verificar validade e aspecto do frasco",
        "Armazenamento correto: refrigerar entre 2-8°C"
      ],
      "references": [
        "Protocolo de Segurança na Administração de Insulina - ANVISA",
        "Diretrizes da Sociedade Brasileira de Diabetes (SBD)",
        "Manual de Cálculo e Administração de Medicamentos - COREN",
        "Boas Práticas de Enfermagem - Ministério da Saúde"
      ],
      "tags": ["insulina", "diabetes", "medicação", "segurança", "dose"]
    },
