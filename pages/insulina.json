  "form": {
    "sections": [
      {
        "title": "Dados do Paciente",
        "fields": [
          {
            "id": "patientName",
            "type": "text",
            "label": "Nome do Paciente",
            "placeholder": "Nome completo (opcional)",
            "optional": true,
            "tooltip": "Identificação do paciente para fins de registro.",
            "libras": false
          },
          {
            "id": "patientBirthdate",
            "type": "date",
            "label": "Data de Nascimento",
            "optional": true,
            "tooltip": "Para cálculo de idade e verificação de faixa etária.",
            "libras": false
          }
        ]
      },
      {
        "title": "Parâmetros Clínicos",
        "fields": [
          {
            "id": "prescribedDose",
            "type": "number",
            "label": "Prescrição Médica (UI)",
            "placeholder": "Ex: 15",
            "required": true,
            "min": 0,
            "step": 0.5,
            "unit": "UI",
            "tooltip": "Quantidade de insulina prescrita em unidades internacionais.",
            "libras": false
          },
          {
            "id": "insulinConcentration",
            "type": "select",
            "label": "Concentração da Insulina (UI/mL)",
            "options": [
              { "value": 100, "label": "100 UI/mL (Insulina Regular U100)" },
              { "value": 200, "label": "200 UI/mL (Insulina Glargine U200)" },
              { "value": 300, "label": "300 UI/mL (Insulina Degludec U300)" }
            ],
            "default": 100,
            "tooltip": "Concentração da insulina.",
            "libras": false
          }
        ]
      }
    ],
    "buttons": {
      "calculate": {
        "label": "Calcular",
        "icon": "fa-calculator",
        "action": "calculate"
      },
      "reset": {
        "label": "Limpar",
        "icon": "fa-rotate-left",
        "action": "reset"
      }
    }
  },
  "calculation": {
    "formula": "volume = prescribedDose / insulinConcentration",
    "result": {
      "label": "Dose a Aspirar",
      "unit": "mL",
      "decimals": 2
    },
    "audit": {
      "title": "Auditoria do Cálculo",
      "steps": [
        {
          "label": "Prescrição Médica",
          "sourceField": "prescribedDose",
          "suffix": "UI",
          "icon": "fa-file-medical"
        },
        {
          "label": "Concentração",
          "sourceField": "insulinConcentration",
          "format": "concentrationType",
          "suffix": "UI/mL",
          "icon": "fa-vial"
        },
        {
          "label": "Fórmula",
          "fixedValue": "Volume = Prescrição / Concentração",
          "icon": "fa-calculator"
        },
        {
          "label": "Fórmula com Valores",
          "dynamicExpression": "{{ prescribedDose }} UI / {{ insulinConcentration }} UI/mL = {{ volume }} mL",
          "icon": "fa-calculator"
        },
        {
          "label": "Volume Final",
          "sourceField": "volume",
          "suffix": "mL",
          "icon": "fa-check-double"
        }
      ]
    },
    "actionButtons": [
      {
        "type": "primary",
        "label": "Gerar PDF",
        "icon": "fa-file-pdf",
        "action": "generatePDF"
      },
      {
        "type": "secondary",
        "label": "Copiar Resultado",
        "icon": "fa-copy",
        "action": "copyResult"
      },
      {
        "type": "secondary",
        "label": "Diagnóstico de Enfermagem",
        "icon": "fa-stethoscope",
        "action": "searchNursingDiagnosis",
        "searchQuery": "{{ title }} {{ result }} NANDA NIC NOC"
      }
    ]
  },
  "tabs": [
